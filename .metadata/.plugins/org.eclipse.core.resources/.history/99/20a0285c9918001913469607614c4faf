package test01;

import java.util.Scanner;

public class quest12 {
	public static void main(String[]args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.print("연산>> ");
		
		double a = sc.nextDouble();
		String str = sc.next();
		double b = sc.nextDouble();
		
		double sum = 0;
		
		if (str.equals("+"))
		{
			sum =  a+b;
			System.out.println(a+str+b+"계산 결과는"+sum);
		}
		
	}
}
